# Environment Configuration Template
# Copy this file to .env and fill in your values

# Deployment stage (dev, stg, prod)
STAGE=dev

# Project name (lowercase, no spaces)
PROJECT=myproject

# AWS Region (e.g., us-east-1, ap-northeast-1)
CDK_REGION=ap-northeast-1

# AWS Account ID (12-digit number)
CDK_ACCOUNT_ID=123456789012

# VPC CIDR Block
CIDR_BLOCK=10.128.0.0/16

# Optional: Maximum Availability Zones (default: 2)
VPC_MAX_AZS=2

# Optional: Number of NAT Gateways (default: 0, set to 1+ for private subnet internet access)
VPC_NAT_GATEWAYS=0

# RDS Configuration
RDS_INSTANCE_TYPE=t3.micro
RDS_MULTI_AZ=false
RDS_STORAGE=20
RDS_DB_NAME=cdkapp
RDS_USERNAME=postgres

# EC2 Configuration
EC2_INSTANCE_TYPE=t3.micro
# Optional: EC2 Key Pair name for SSH access (if not provided, SSM access only)
EC2_KEY_NAME=
